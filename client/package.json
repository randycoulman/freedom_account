{
  "name": "freedom-account",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "build": "craco build",
    "eject": "react-scripts eject",
    "format": "npm-run-all --parallel format:*",
    "format:css": "stylelint --fix \"**/*.css\" && prettier --write \"**/*.css\"",
    "format:js": "eslint --fix . && prettier --write \"**/*.{gql,html,js,json,md}\"",
    "lint": "npm-run-all lint:*",
    "lint:css": "stylelint \"**/*.css\" --rdd --risd --rd --max-warnings 0",
    "lint:format": "prettier --check \"**/*.{css,gql,html,js,json,md}\"",
    "lint:js": "eslint . --max-warnings 0 --report-unused-disable-directives",
    "start": "craco start",
    "test": "craco test",
    "test:coverage": "npm run test:once -- --ci --coverage --reporters=default --reporters=jest-junit",
    "test:once": "npm test -- --watchAll=false",
    "validate": "npm-run-all lint test:coverage"
  },
  "dependencies": {
    "@craco/craco": "^6.4.0",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "react-scripts": "4.0.3",
    "stylelint-bare-webpack-plugin": "^2.1.0",
    "web-vitals": "^1.1.2"
  },
  "devDependencies": {
    "@babel/eslint-parser": "^7.14.7",
    "@testing-library/jest-dom": "^5.14.1",
    "@testing-library/react": "^11.2.7",
    "@testing-library/user-event": "^12.8.3",
    "eslint": "^7.30.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-eslint-comments": "^3.2.0",
    "jest-junit": "^13.0.0",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.4.1",
    "stylelint": "^14.0.1",
    "stylelint-config-prettier": "^9.0.3",
    "stylelint-config-standard": "^23.0.0",
    "stylelint-order": "^5.0.0"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "jest": {
    "coverageReporters": [
      "lcov",
      "text-summary"
    ]
  },
  "jest-junit": {
    "outputDirectory": "test_results"
  }
}
